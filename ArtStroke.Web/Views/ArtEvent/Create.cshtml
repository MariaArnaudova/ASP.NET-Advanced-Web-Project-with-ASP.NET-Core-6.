@model ArtEventFormModel
@{
    ViewBag.Title = "Add Event";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

<div class="row position-relative">
     <img class="position-relative"style="width: 100%; height: 70vh; " src="/imgs/Stroke_Transparent_Multi_2.png" alt="Art Stroke"/>

    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 position-absolute">
         <form method="post">
               <div class="form-group">
                 <label asp-for="Title"></label>
                 <input asp-for="Title" class="form-control" placeholder="Title...">
                        <span asp-validation-for="Title" class="small text-danger"></span>
               </div>
               <div class="form-group">
                       <label asp-for="PublicDate"></label>
                       <input asp-for="PublicDate"  class="form-control" placeholder="Year"/>
                       <span asp-validation-for="PublicDate" class="small text-danger"></span>
               </div>
               <div class="form-group">
                       <label asp-for="Information"></label>
                       <input asp-for="Information" class="form-control" placeholder="Information...">                  
                       <span asp-validation-for="Information" class="small text-danger"></span>
                </div>
                <div class="form-group">
                       <label asp-for="ImageUrl"></label>
                       <input asp-for="ImageUrl" class="form-control" placeholder="Your event URL here...">
                       <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
      
                 <div class="text-center">
                     <input class="btn btn-primary mt-3" type="submit" value="Save" style="background-color:#3ba6b1; border-radius: 20px;  width:30%"/>
                 </div>
         </form>
    </div>
</div>


@section Scripts {
        <partial name ="_ValidationScriptsPartial"/>
}
